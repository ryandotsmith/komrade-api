<!doctype html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<title>Komrade Dashboard</title>
	<meta name="description" content="Komrade Dashboard" />
	<link href="css/bootstrap.min.css" rel="stylesheet" type="text/css">
	<link href="css/style.css" rel="stylesheet" type="text/css">
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
	<script src="js/underscore.js" type="text/javascript"></script>
	<script src="js/highcharts.js" type="text/javascript"></script>
	<script src="js/chart-theme.js" type="text/javascript"></script>
	<script src="js/realtime-metrics.js" type="text/javascript"></script>
	<script src="js/job-manager.js" type="text/javascript"></script>
	<script src="js/queue-summary.js" type="text/javascript"></script>
</head>

<body>
	<div class="container">
		<section id="queue-summary"></section>

		<section id="throughput-metrics">
			<span>Throughput</span>
			<div id="chart-nav" class="time-selection">
				<a href="/metrics">Realtime</a>
				<a href="/metrics?limit=hour" class="selected" >Hour</a>
				<a href="/metrics?limit=day">Day</a>
			</div>
			<hr />
			<div class="chart"></div>
		</section>

		<section id="job-manager">
			<span>Errors</span>
			<div id="job-manager-nav" class="time-selection">
				<a class="selected" href="/failed-jobs?resolution=hour">Hour</a>
				<a href="/failed-jobs?resolution=day">Day</a>
				<a href="/failed-jobs?resolution=week">Week</a>
				<a href="/failed-jobs?resolution=month">Month</a>
			</div>
			<hr />
			<div class="row">
				<div class="span12">
					<table id="jobs-table" class="table table-hover">
						<!--
						<thead>
							<tr>
								<th>Timestamp</th>
								<th>Job</th>
								<th>Parameters</th>
								<th>Error</th>
								<th>Message</th>
							<tr>
						</thead>
						-->
						<tbody>
						</tbody>
					</table>
				</div>
			</div>
		</section>
	</div>
</body>

<script src="https://s3.amazonaws.com/assets.heroku.com/boomerang/boomerang.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    Boomerang.init({app: '<%=@app["name"]%>', addon: 'komrade'});
  });
</script>
</html>
